# coding: utf-8Root:<Root@BoxLayout>:   vertex_rgba: 0,0,1,0.75 ### added ###   orientation: 'horizontal'   mode: ''   DrawField:      id: drawfield      size_hint_x: 4   BoxLayout:      orientation: 'vertical'      ToggleButton:         text: '頂点'         mode: 'vertex'      ToggleButton:         text: '辺'         mode: 'edge'      ToggleButton:         text: '削除'         mode: 'erase'      ### added ###      ColorChangeButton:         text: '頂点色の変更'      #############      Button:         text: 'クリア'         on_press: drawfield.clear()      Button:         text: 'マッチング'         on_press: drawfield.match()<DrawField>:   canvas.before:      Color:         rgb: 1,1,1      Rectangle:         pos: self.pos         size: self.size<Vertex>:   rad: 25   size: self.rad*2, self.rad*2   canvas:      Color:         rgba: app.root.vertex_rgba ### modified ###      Ellipse:         pos: self.pos         size: self.size<Button>:   font_size: 20   font_name: 'VL-Gothic-Regular.ttf'   <ToggleButton>:   group: 'draw'   on_press: app.root.mode = self.mode### added ###<Label>:   font_size: 20   font_name: 'VL-Gothic-Regular.ttf'<Slider>:   min: 0   max: 1   step: 0.01<ColorChangeView>   size_hint: 0.75,0.75   canvas:      Color:         rgb: 1,1,1      Rectangle:         pos: self.pos         size: self.size   on_rgba:      app.root.vertex_rgba = self.rgba   BoxLayout:      orientation: 'vertical'      BoxLayout:         size_hint_y: 0.1         Label:            size_hint_x: 9            text: '頂点色の変更'            color: 0,0,0,1         Widget:            canvas:               Color:                  rgba: root.rgba               Rectangle:                  size: self.size                  pos: self.pos      GridLayout:         rows: 3         cols: 2         Label:            size_hint_x: 0.25            text: 'R'            color: 0.7,0,0,1         Slider:            value: root.rgba[0]            on_value: root.rgba[0] = self.value         Label:            size_hint_x: 0.25            text: 'G'            color: 0,0.7,0,1         Slider:            value: root.rgba[1]            on_value: root.rgba[1] = self.value         Label:            size_hint_x: 0.25            text: 'B'            color: 0,0,0.7,1         Slider:            value: root.rgba[2]            on_value: root.rgba[2] = self.value#############       