BoxLayout:
	orientation:"vertical"
	Label:
		font_size:400
		text:str(box.value)
		color:0,0,0,0
		on_text:
			if box.value ==0:self.color=[0,0,0,0]
			else:self.color = [1,1,1,1]
	BoxLayout:
		id: box
		value:0
		on_value:
			self.value = self.value%10000000
		orientation:"horizontal"
		size_hint_y:0.2
		MyButton:
			value:0
		MyButton:
			value:1
		MyButton:
			value:2
		MyButton:
			value:3
		MyButton:
			value:4
		MyButton:
			value:5
		MyButton:
			value:6
		MyButton:
			value:7
		MyButton:
			value:8
		MyButton:
			value:9
<MyButton@Button>:
	value:self.value
	font_size:100
	bold:True
	text:str(self.value)
	on_press:
		self.parent.value = self.parent.value*10 + self.value
		